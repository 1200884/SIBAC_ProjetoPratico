   	Hypothesis $h3 = (Hypothesis)TrackingAgendaListener.getFactRef(Hypothesis.class, "virusdacriacaoensacada", "true");
   	Hypothesis $h4 = (Hypothesis)TrackingAgendaListener.getFactRef(Hypothesis.class, "envenenamento", "true");


	if($h1 != null){
		$h1.update();

	}
	if($h2 != null){
		$h2.update();		

	}
	if($h3 != null){
		$h3.update();
			

	}
	if($h4 != null){
		$h4.update();
		

	}
end

